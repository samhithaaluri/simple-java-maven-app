pipeline {
        agent any
        tools{
                maven 'maven'
        }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn deploy sonar:sonar'
            }
        }
        
        }
        post{
                failure{
                        emailext attachLog: true, body: 'pipeline failed', recipientProviders: [buildUser()], subject: 'failed', to: 'samhithaaluri@gmail.com'
                }
        }

    }


